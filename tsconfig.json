{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["es6"],
    "outDir": "./dist",
    "moduleDetection": "force",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowJs": true
  },
  "lib": ["es2015"],
  "type": "module",
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
